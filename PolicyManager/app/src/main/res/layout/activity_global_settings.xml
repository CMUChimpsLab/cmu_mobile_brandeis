<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/policy_manager_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:background="@color/header_blue">
        <TextView
            android:id="@+id/activity_global_setting_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/global_setting_main_back_arrow"
            android:layout_alignTop="@id/global_setting_main_back_arrow"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:text="@string/global_settings"/>
        <ImageView
            android:id="@+id/global_setting_main_back_arrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="25dp"
            android:onClick="goBack"
            android:src="@drawable/ic_arrow_back_white_24dp"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_alignStart="@id/activity_global_setting_header_title"
            android:layout_below="@id/activity_global_setting_header_title"
            android:text="@string/activity_global_setting_description"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:id="@+id/activity_global_setting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="52dp"
            android:orientation="vertical"/>
    </ScrollView>
</LinearLayout>