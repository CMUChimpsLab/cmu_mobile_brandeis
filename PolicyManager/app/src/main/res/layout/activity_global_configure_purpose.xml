<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/policy_manager_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:background="@color/header_blue">
        <ImageView
            android:id="@+id/allysiqi_global_exit_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:onClick="goBack"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_white_24dp"/>
        <ImageView
            android:id="@+id/global_settings_permission_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/allysiqi_global_exit_button"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            tools:src="@drawable/ic_location_white_24dp"/>
        <TextView
            android:id="@+id/global_settings_permission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/global_settings_permission_icon"
            android:layout_alignTop="@id/global_settings_permission_icon"
            android:layout_marginEnd="10dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            tools:text="Read Calendar"/>
        <TextView
            android:id="@+id/global_settings_permission_description"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/global_settings_permission_title"
            android:layout_alignStart="@id/global_settings_permission_title"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            tools:text="@string/read_calendar_description"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        android:orientation="vertical">
        <TextView
            android:id="@+id/global_setting_configure_all_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:text="@string/configure_all_apps"
            style="@style/global_setting_section_header"/>
        <TextView
            android:id="@+id/global_setting_configure_all_apps_description"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/global_setting_configure_all_apps"
            android:layout_alignStart="@id/global_setting_configure_all_apps"
            style="@style/description"
            tools:text="@string/configure_all_description"/>

        <edu.cmu.policymanager.ui.common.ConfigureSwitch
            android:id="@+id/global_setting_master_permission_switch"
            android:layout_width="125dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"/>
        <View
            android:id="@+id/global_settings_purpose_screen_divider"
            android:layout_below="@id/global_setting_configure_all_apps_description"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            style="@style/divider"/>
        <TextView
            android:id="@+id/global_setting_configure_based_on_purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/global_settings_purpose_screen_divider"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/configure_based_on_purpose"
            style="@style/global_setting_section_header"/>
        <TextView
            android:id="@+id/global_setting_configure_purpose_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/global_setting_configure_based_on_purpose"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            style="@style/description"
            tools:text="@string/configure_based_on_purpose_description" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/global_setting_configure_purpose_description"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <LinearLayout
                android:id="@+id/allysiqi_configure_permission_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="52dp"
                android:orientation="vertical"/>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>