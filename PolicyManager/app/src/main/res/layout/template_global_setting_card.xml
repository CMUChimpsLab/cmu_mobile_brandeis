<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardElevation="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="15dp">
        <ImageView
            android:id="@+id/global_setting_group_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/ic_coarse_location_blue_24dp"/>
        <TextView
            android:id="@+id/global_setting_permission_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/global_setting_group_icon"
            android:textColor="#6A6A6A"
            android:textSize="16sp"
            tools:text="Calendar"/>
        <ImageView
            android:id="@+id/global_setting_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_keyboard_arrow_down_grey_24dp"/>
        <ImageView
            android:id="@+id/global_setting_upbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_keyboard_arrow_up_grey_24dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/global_setting_navbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_keyboard_arrow_right_grey_24dp"
            android:visibility="gone"/>
        <View
            android:id="@+id/global_setting_card_divider"
            android:layout_marginTop="25dp"
            android:layout_marginStart="-15dp"
            android:layout_marginEnd="-15dp"
            android:layout_below="@id/global_setting_permission_group_name"
            android:clipToPadding="false"
            android:visibility="gone"
            style="@style/divider_thin"/>
        <LinearLayout
            android:id="@+id/global_setting_permission_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/global_setting_card_divider"
            android:orientation="vertical"
            android:visibility="gone"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>