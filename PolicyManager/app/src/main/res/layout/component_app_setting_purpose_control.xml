<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:id="@+id/app_setting_purpose_control_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        style="@style/permission_purpose"
        tools:text="For Nearby Places"/>
    <TextView
        android:id="@+id/app_setting_purpose_control_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_setting_purpose_control_title"
        android:layout_marginStart="40dp"
        style="@style/description"
        tools:text="Search for places around you."/>
    <edu.cmu.policymanager.ui.common.ConfigureSwitch
        android:id="@+id/app_setting_purpose_control_switch"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/app_setting_purpose_control_advanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:text="@string/advanced"
        style="@style/link_dark_blue"/>
</RelativeLayout>