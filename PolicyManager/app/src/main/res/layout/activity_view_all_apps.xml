<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/policy_manager_background"
    android:orientation="vertical">

    <include layout="@layout/common_action_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/all_apps_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:entries="@array/apps_filter_array"/>
        <ImageView
            android:id="@+id/all_apps_filter_dropdown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="#FFFFFF"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"/>
    </LinearLayout>
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/all_apps_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>
</LinearLayout>