<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/profile_preview_back_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#2d89ff">
        <ImageView
            android:id="@+id/profile_preview_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:onClick="back"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_white_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_preview_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:text="@string/policy_profiles"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profile_preview_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_preview_back_button_container"
                android:src="@drawable/global_settings_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/profile_preview_banner"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="10dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:text="@string/organizational_profile"/>
            <TextView
                android:id="@+id/profile_preview_global_settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/profile_preview_banner"
                android:text="@string/policy_profile_global_settings"
                style="@style/policy_profile_section_header"/>
            <LinearLayout
                android:id="@+id/profile_preview_global_settings_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_preview_global_settings_text"
                android:layout_marginTop="5dp"
                android:orientation="vertical"/>
            <TextView
                android:id="@+id/profile_preview_app_settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_preview_global_settings_container"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="@string/policy_profile_app_settings"
                style="@style/policy_profile_section_header"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_preview_app_settings_text"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="35dp"
                android:layout_marginEnd="10dp"
                android:text="@string/no_profile_app_settings"
                style="@style/text_dark"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#FFFFFF">
        <Button
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="35dp"
            android:onClick="cancel"
            android:textColor="@color/light_blue"
            android:text="@string/cancel_caps"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/profile_add_step_three_continue"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:onClick="installProfile"
            android:background="@color/light_blue"
            android:textColor="#FFFFFF"
            android:text="@string/add"/>
    </RelativeLayout>
</LinearLayout>