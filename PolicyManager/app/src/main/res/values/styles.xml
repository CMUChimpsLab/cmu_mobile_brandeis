<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:textColorPrimary">@color/primary_text_light</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_dark</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="runtime_title" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>item>
    </style>

    <style name="runtime_description" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/description_grey</item>item>
    </style>

    <style name="policy_profile_section_header" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="divider" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#d2d2d2</item>
    </style>

    <style name="divider_thin" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#DDDDDD</item>
    </style>

    <style name="link_dark_blue" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#1a73e8</item>
    </style>

    <style name="text_dark" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="text_white" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="text_large_dark" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="text_large_white" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="app_setting_title" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title_grey</item>
    </style>

    <style name="global_setting_section_header" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title_grey</item>
    </style>

    <style name="card_main_title" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title_grey</item>
    </style>

    <style name="description" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/description_grey</item>
    </style>

    <style name="permission_purpose" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_dark_bold" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="homescreen_section_subtitle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#747474</item>
    </style>

    <style name="subtext_dark" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="homescreen_link" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#1A73E8</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_medium" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#747474</item>
    </style>

    <style name="text_large_medium" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#747474</item>
    </style>

    <style name="subtext_medium" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#747474</item>
    </style>

    <style name="text_light" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#c8c8c8</item>
    </style>

    <style name="subtext_light" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#c8c8c8</item>
    </style>

    <style name="section_title" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="section_description" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="view_all" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1b6cd2</item>
    </style>

    <style name="toolbar_title" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="all_apps_section_title" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homescreen_main_title" parent="section_title">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#434343</item>
    </style>

    <style name="homescreen_main_description" parent="section_description">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="homescreen_add_setting_section_title" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="notification_title" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="notification_description" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="notification_app_icon" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--<item name="android:radioButtonStyle">@style/MyRadioButtonStyle</item>-->
    </style>
</resources>
